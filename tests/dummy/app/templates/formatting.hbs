      {{tags-input size='small' placeholder='small' options=things optgroups=optGroup}}
    </div>
    <div class="col-xs-6 col-md-8">
      <pre><code>\{{tags-input size='small' placeholder='small'}}</code></pre>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-md-4">
      {{tags-input placeholder='default' options=things optgroups=optGroup}}
    </div>
    <div class="col-xs-6 col-md-8">
      <pre><code>\{{tags-input placeholder='default'}}</code></pre>
    </div>
